.page-header
  %h1 Documents
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Name
      %th Created At
      %th Actions
  %tbody
    - @documents.each do |document|
      %tr
        %td= link_to document.id, document_path(document)
        %td= document.name
        %td=l document.created_at
        %td
          = link_to "Destroy", document_path(document), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'

= link_to "New", new_document_path, class: 'btn btn-primary'
